@model IEnumerable<AccesoDatos.Models.Pago>

@{
    ViewData["Title"] = "PAGOS";
}

<h1 class="text-center mt-4">@ViewData["Title"]</h1>

<div class="row mb-5">
    <div class="col-md-8">
        <form asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" class="form-control rounded-start" name="searchString" placeholder="Buscar por apellido del cliente o tipo de membresía..." value="@ViewData["CurrentFilter"]" />
                <button type="submit" class="btn btn-primary rounded-end">Buscar</button>
            </div>
            <div class="mt-2">
                <a class="btn btn-outline-secondary btn-sm" asp-action="Index">Limpiar</a>
            </div>
        </form>
    </div>
    <div class="col-md-4 text-md-right mt-3 mt-md-0">
        <a class="btn btn-success btn-lg" asp-action="Create">+ Nuevo Pago</a>
    </div>
</div>

<table class="table table-hover shadow-sm rounded" style="background-color: #ffffff; border: 2px solid #17a2b8;">
    <thead style="background: linear-gradient(45deg, #f39c12, #e74c3c); color: white;">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Cliente.Apellido)</th>
            <th>@Html.DisplayNameFor(model => model.Membresia.Tipo)</th>
            <th>@Html.DisplayNameFor(model => model.Monto)</th>
            <th>@Html.DisplayNameFor(model => model.FechaPago)</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="background-color: #f8f9fa; border-bottom: 2px solid #17a2b8;">
                <td style="color: #e74c3c;">@Html.DisplayFor(modelItem => item.Cliente.Apellido)</td>
                <td style="color: #3498db;">@Html.DisplayFor(modelItem => item.Membresia.Tipo)</td>
                <td style="color: #2ecc71;">@Html.DisplayFor(modelItem => item.Monto)</td>
                <td style="color: #f39c12;">@Html.DisplayFor(modelItem => item.FechaPago)</td>
                <td class="text-center">
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-info mx-2" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
