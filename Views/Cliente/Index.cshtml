@model IEnumerable<AccesoDatos.Models.Cliente>

@{
    ViewData["Title"] = "CLIENTES";
}

<h1 class="text-center mt-4">@ViewData["Title"]</h1>

<div class="row mb-5">
    <div class="col-md-8">
        <form asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" class="form-control rounded-start" name="searchString" placeholder="Buscar por nombre..." value="@ViewData["CurrentFilter"]" />
                <button type="submit" class="btn btn-primary rounded-end">Buscar</button>
            </div>
            <div class="mt-2">
                <a class="btn btn-outline-secondary btn-sm" asp-action="Index">Limpiar</a>
            </div>
        </form>
    </div>
    <div class="col-md-4 text-md-right mt-3 mt-md-0">
        <a class="btn btn-success btn-lg" asp-action="Create">+ Nuevo Cliente</a>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm" style="border-left: 5px solid #3498db;">
                <div class="card-body">
                    <h5 class="card-title text-primary">@item.Nombre @item.Apellido</h5>
                    <p class="card-text">
                        <strong style="color: #e74c3c;">Fecha de Nacimiento:</strong> @item.FechaNacimiento<br />
                        <strong style="color: #f39c12;">Email:</strong> @item.Email<br />
                        <strong style="color: #2ecc71;">Teléfono:</strong> @item.Telefono<br />
                        <strong style="color: #9b59b6;">Fecha de Registro:</strong> @item.FechaRegistro
                    </p>
                    <div class="mt-3">
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-sm btn-info mx-2" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
